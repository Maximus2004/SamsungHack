<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:src="@drawable/profile_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileTextView"
        android:layout_width="415px"
        android:layout_height="100px"
        android:background="@drawable/text_view_background"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        android:text="@string/profile_text_view"
        android:textColor="@color/black"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="@+id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backButton" />

    <ImageView
        android:id="@+id/ellipseImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_ellipse_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileTextView" />

    <ImageView
        android:id="@+id/manImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_man_figure_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/ellipseImageView"
        app:layout_constraintEnd_toEndOf="@+id/ellipseImageView"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="@+id/ellipseImageView"
        app:layout_constraintTop_toTopOf="@+id/ellipseImageView"
        app:layout_constraintVertical_bias="0.322" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="390px"
        android:layout_height="100px"
        android:layout_marginStart="16dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/text_view_background"
        android:clickable="true"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        android:text="Ваше имя:"
        android:textColor="@color/black"
        android:textSize="50px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="390px"
        android:layout_height="100px"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_view_background"
        android:clickable="true"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        android:text="Почта:"
        android:textColor="@color/black"
        android:textSize="50px"
        app:layout_constraintStart_toStartOf="@+id/nameTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="390px"
        android:layout_height="100px"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_view_background"
        android:clickable="true"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        android:text="Телефон:"
        android:textColor="@color/black"
        android:textSize="50px"
        app:layout_constraintStart_toStartOf="@+id/emailTextView"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

    <TextView
        android:id="@+id/currentNameTextView"
        android:layout_width="560px"
        android:layout_height="100px"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        tools:text="EcoCrystal"
        android:textSize="45px"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/nameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/currentEmailTextView"
        android:layout_width="560px"
        android:layout_height="100px"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        tools:text="ecocrystal123@gmail.com"
        android:textSize="45px"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/emailTextView"
        app:layout_constraintEnd_toEndOf="@+id/currentNameTextView"
        app:layout_constraintTop_toTopOf="@+id/emailTextView" />


    <TextView
        android:id="@+id/currentPhoneNumberTextView"
        android:layout_width="540px"
        android:layout_height="100px"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        tools:text="7-900-111-22-33"
        android:textSize="45px"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/phoneNumberTextView"
        app:layout_constraintEnd_toEndOf="@+id/currentEmailTextView"
        app:layout_constraintTop_toTopOf="@+id/phoneNumberTextView" />

    <TextView
        android:id="@+id/premiumUnenabledTextView"
        android:layout_width="415px"
        android:layout_height="100px"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="@color/profile_colors_gray"
        android:fontFamily="@font/montserrat_alternates_semi_bold"
        android:gravity="center"
        android:text="Премиум"
        android:textColor="@color/black"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberTextView"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/descriptionDefaultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/premium_unenabled_background"
        android:backgroundTint="@color/sign_up_colors_light_gray"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        android:text="У вас отсутсвует подписка!\n\nВозможности подписки:\n\n"
        android:textColor="@color/black"
        android:textSize="45px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/premiumUnenabledTextView"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/widgetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Добавление виджета на рабочий стол"
        android:textColor="@color/sign_up_colors_blue"
        android:textSize="45px"
        app:layout_constraintEnd_toEndOf="@+id/descriptionDefaultTextView"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/descriptionDefaultTextView"
        app:layout_constraintTop_toTopOf="@+id/descriptionDefaultTextView"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/predictionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Прогнозирование"
        android:textColor="@color/sign_up_colors_blue"
        android:textSize="45px"
        app:layout_constraintEnd_toEndOf="@+id/descriptionDefaultTextView"
        app:layout_constraintStart_toStartOf="@+id/descriptionDefaultTextView"
        app:layout_constraintTop_toBottomOf="@+id/widgetTextView"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/subscribeButton"
        android:layout_width="690px"
        android:layout_height="100px"
        android:background="@drawable/button_background"
        android:fontFamily="@font/montserrat_alternates_semi_bold"
        android:gravity="center"
        android:text="Оформить подписку"
        android:textColor="@color/white"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionDefaultTextView"
        android:visibility="visible"/>

    <!--  ДЛЯ ПРЕМИУМА  -->

    <ImageView
        android:id="@+id/crownImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_crown_avatar"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="@id/ellipseImageView"
        app:layout_constraintEnd_toEndOf="@+id/manImageView"
        app:layout_constraintStart_toStartOf="@+id/manImageView"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/premiumEnabledTextView"
        android:layout_width="415px"
        android:layout_height="100px"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/montserrat_alternates_semi_bold"
        android:gravity="center"
        android:text="Премиум"
        android:textColor="@color/white"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberTextView"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/descriptionPremiumTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/premium_unenabled_background"
        android:backgroundTint="@color/sign_up_colors_light_gray"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center"
        android:text="У вас оформлена подписка!\nВозможности подписки:\n\n\n"
        android:textColor="@color/black"
        android:textSize="45px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/premiumEnabledTextView"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/widgetPremiumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Добавление виджета на рабочий стол"
        android:textColor="@color/sign_up_colors_blue"
        android:textSize="45px"
        app:layout_constraintEnd_toEndOf="@+id/descriptionPremiumTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/descriptionPremiumTextView"
        app:layout_constraintTop_toTopOf="@+id/descriptionPremiumTextView"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/predictionPremiumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Прогнозирование"
        android:textColor="@color/sign_up_colors_blue"
        android:textSize="45px"
        app:layout_constraintStart_toStartOf="@id/descriptionPremiumTextView"
        app:layout_constraintEnd_toEndOf="@id/descriptionPremiumTextView"
        app:layout_constraintTop_toBottomOf="@id/widgetPremiumTextView"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/subscriptionPeriodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:textColor="@color/sign_up_colors_gray"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="@string/subscription_period_text_view"
        tools:text="Подписка действует до 30.04.2024"
        app:layout_constraintTop_toBottomOf="@id/predictionPremiumTextView"
        app:layout_constraintStart_toStartOf="@id/descriptionPremiumTextView"
        app:layout_constraintEnd_toEndOf="@id/descriptionPremiumTextView"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/subscriptionCancelButton"
        android:layout_width="415px"
        android:layout_height="100px"
        android:background="@drawable/button_background"
        android:fontFamily="@font/montserrat_alternates_semi_bold"
        android:gravity="center"
        android:text="Отменить"
        android:textColor="@color/white"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionPremiumTextView"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/subscriptionExtendButton"
        android:layout_width="415px"
        android:layout_height="100px"
        android:background="@drawable/button_background"
        android:fontFamily="@font/montserrat_alternates_semi_bold"
        android:gravity="center"
        android:text="Продлить"
        android:textColor="@color/white"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.880"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionPremiumTextView"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>